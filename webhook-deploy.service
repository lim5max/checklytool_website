[Unit]
Description=Webhook Deployment Server
After=network.target
Wants=network.target

[Service]
Type=simple
User=root
WorkingDirectory=/var/www/checklytool_website
ExecStart=/usr/bin/node webhook-server.js
Restart=always
RestartSec=10
Environment=NODE_ENV=production
Environment=WEBHOOK_PORT=9000
Environment=WEBHOOK_SECRET=your-super-secret-webhook-key-2025
StandardOutput=syslog
StandardError=syslog
SyslogIdentifier=webhook-deploy

[Install]
WantedBy=multi-user.target